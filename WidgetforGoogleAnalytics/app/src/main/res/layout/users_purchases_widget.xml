<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#09C"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_new_users_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="16"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/widget_new_users_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="NEW USERS"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/widget_current_users_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="284"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/widget_current_users_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="CURRENT USERS"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/widget_premium_purchases_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/widget_premium_purchases_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="UPGRADES"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_version_label_1"
            android:text="2.2.0"
            style="@style/WidgetVersionLabel"/>

        <TextView
            android:id="@+id/widget_version_users_1"
            android:layout_toRightOf="@id/widget_version_label_1"
            android:text="165"
            style="@style/WidgetVersionUserCount"/>

        <TextView
            android:id="@+id/widget_version_label_2"
            android:text="2.1.1"
            android:layout_below="@id/widget_version_label_1"
            style="@style/WidgetVersionLabel"/>

        <TextView
            android:id="@+id/widget_version_users_2"
            android:layout_toRightOf="@id/widget_version_label_2"
            android:layout_below="@id/widget_version_users_1"
            android:text="84"
            style="@style/WidgetVersionUserCount"/>

        <TextView
            android:id="@+id/widget_version_label_3"
            android:text="1.8.0"
            android:layout_below="@id/widget_version_label_2"
            style="@style/WidgetVersionLabel"/>

        <TextView
            android:id="@+id/widget_version_users_3"
            android:layout_toRightOf="@id/widget_version_label_3"
            android:layout_below="@id/widget_version_users_2"
            android:text="35"
            style="@style/WidgetVersionUserCount"/>

    </RelativeLayout>

</LinearLayout>